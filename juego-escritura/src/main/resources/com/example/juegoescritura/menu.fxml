<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="420" prefWidth="720" styleClass="anchor-pane-bg" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.example.juegoescritura.controller.MenuController">

    <children>
        <VBox alignment="CENTER" spacing="14" AnchorPane.bottomAnchor="24" AnchorPane.leftAnchor="24" AnchorPane.rightAnchor="24" AnchorPane.topAnchor="24">
            <HBox alignment="CENTER" spacing="12">
                <!-- ImageView sin <image> para evitar que FXMLLoader falle; lo cargamos desde el controlador -->
                <ImageView fx:id="imgLogo" fitHeight="512" fitWidth="512" pickOnBounds="true" preserveRatio="true" styleClass="image-logo" />
            </HBox>

            <!-- Dentro del AnchorPane principal, reemplaza el bloque del card (asegúrate de mantener el resto del archivo) -->
            <VBox styleClass="card" maxWidth="720" alignment="CENTER_LEFT" spacing="12">
                <!-- Primera fila: Récord + versión arriba a la derecha -->
                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Récord:"/>
                    <Label fx:id="lblHighScore" styleClass="big-label"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- v1.0 arriba a la derecha -->
                    <Label text="v1.0" styleClass="small-text"/>
                </HBox>

                <!-- Segunda fila: botones secundarios (Instrucciones, Reiniciar) -->
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Button fx:id="btnInstructions" text="Instrucciones" styleClass="button button-outline" onAction="#onInstructionsClicked"/>
                    <Button fx:id="btnReset" text="Reiniciar Récord" styleClass="button button-outline" onAction="#onResetHighScore"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnStart" text="Iniciar" styleClass="button button-accent" onAction="#onStartClicked" />
                </HBox>

                <!-- Tercera fila: botón grande START centrado abajo
                <HBox alignment="CENTER">
                    <padding>
                        <Insets top="8" right="0" bottom="0" left="0"/>
                    </padding>
                    <Region HBox.hgrow="ALWAYS"/>

                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>-->
            </VBox>

        </VBox>
    </children>
</AnchorPane>
